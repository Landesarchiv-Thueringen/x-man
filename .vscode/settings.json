{
  // Formatting
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Spell checking
  "cSpell.words": [
    "aips",
    "Aktenplaneinheit",
    "Aktenplanschlüssel",
    "Anbietung",
    "Anbietungen",
    "Archivable",
    "Archivspezifische",
    "archivwürdig",
    "bagit",
    "Bemerkungsnotiz",
    "bson",
    "dimag",
    "DIMAG",
    "Discardable",
    "etree",
    "Formatverifikation",
    "Metadatum",
    "mongodb",
    "Paketierung",
    "Paketierungsebene",
    "Primärdateien",
    "Primärdaten",
    "puid",
    "PUID",
    "Schriftgutobjekt",
    "Schriftgutobjekte",
    "Schriftgutobjekten",
    "sidenav",
    "STARTTLS",
    "Stufigkeit",
    "typst",
    "unappraised",
    "Unappraised",
    "unmarshal",
    "upsert",
    "Upsert",
    "uuid",
    "Validitätsprüfung",
    "Verschachtlungstiefe",
    "webdav",
    "webdavs",
    "xdomea",
    "Xdomea",
    "xman"
  ],
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "gopls": {
    "analyses": {
      "composites": false // allow query syntax for mongodb driver
    }
  }
}
