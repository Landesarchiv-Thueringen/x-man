{
  // Formatting
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Spell checking
  "cSpell.words": [
    "Anbietung",
    "DIMAG",
    "Formatverifikation",
    "sidenav",
    "typst",
    "uuid",
    "xdomea",
    "Xdomea",
    "xman"
  ],
  "typescript.preferences.importModuleSpecifier": "project-relative"
}
